<div class="container mx-auto max-w-3xl px-4 mt-3 mb-1">
  <div class="flex justify-end divide-x space-x-2">
    <% if current_user %>
      <div><%= link_to current_user.email, root_path, class: "btn btn-ghost" %></div>
      <div class="pl-2"><%= button_to "Log Out", log_out_path, method: :delete, class: "btn btn-ghost" %></div>
    <% else %>
      <div><%= link_to "Log In", log_in_path, class: "btn btn-ghost" %></div>
      <div class="pl-2"><%= link_to "Sign Up", sign_up_path, class: "btn btn-ghost" %></div>
    <% end %>
  </div>
</div>
